@import url("http://fonts.googleapis.com/css?family=Roboto:400,300")

html body
  font-family 'Roboto' 'Arial' sans-serif
  font-size 12px

.header-title
  font-size 18px
  line-height 56px

h2.chapter-title
  color $primary-color-dark
  font-size 24px
  font-weight 400
  line-height 32px
  margin-bottom 42px
  @media(min-width 768px)
    font-size 34px
    line-height 40px
    margin-bottom 30px

h3.chapter-title
  @extends h2.chapter-title
  font-size 18px
  line-height 18px
  margin-bottom 8px
  @media(min-width 768px)
    font-size 24px
    line-height 24px
    margin-bottom 8px
